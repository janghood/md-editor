{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "baseUrl": ".",
    "paths": {
      "/src/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ]
}
